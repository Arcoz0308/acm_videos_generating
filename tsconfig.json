{
    "ts-node": {
    },
    "compilerOptions": {
        "target": "es2022",
        "module": "ES2022",
        "baseUrl": ".",
        "paths": {
            "$core/*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "./src/utils/type/*.d.ts",
            "./node_modules/@types"
        ],
        "resolveJsonModule": true,
        "outDir": "./out",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
    }
}
